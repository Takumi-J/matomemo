<div class="row" style="padding-bottom: 30px;">
 <div class = "col-md-5">
  <div class="sub-ti">
   <h2>作品詳細</h2>
  </div>
 </div>
</div>

<div class="row" style="padding-bottom: 10px;">
   <div class = "col-md-5">
     <%= image_tag @work.image.to_s %>
     <p><%= @work.source %></p>
   </div>

   <div class = "col-md-6 offset-md-1">

     <table class="vertical-table">

       <tr>
         <th>5段階評価</th>
         <td><%= @score_avg %></td>
       </tr>

       <tr>
         <th>公開日</th>
         <td><%= @work.release_date %></td>
       </tr>

       <tr>
         <th>ジャンル</th>
         <td>
           <% @genres.each do|genre| %>
            <%= Genre.find(genre).name %>　<!--左に全角スペースあり-->
           <% end %>
         </td>
       </tr>

       <tr>
         <th>原作者</th>
         <td><%= @work.author %></td>
       </tr>

       <% if @work.medium != "漫画" and @work.medium != "小説" %>
       <tr>
         <th>出演者</th>
         <td>
           <% @actors.each do|actor| %>
            <%= Actor.find(actor).name %>　<!--左に全角スペースあり-->
           <% end %>
         </td>
       </tr>
       <% end %>

     </table>
  </div>
</div>

<br>

<div class="row" style="padding-bottom: 10px;">
 <div class = "col-md-10 offset-md-1">
  <table class="vertical-table">
    <tr>
      <th>あらすじ</th>
      <td><%= @work.synopsis%></td>
    </tr>
  </table>
 </div>
</div>

<div class="row" style="padding-bottom:30px;">
 <div class = "col-md-3 offset-md-9">
   <%= link_to("/admin/works/#{@work.id}/edit") do %>
    <button type="button" class="btn btn-success">編集する</button>
   <%end%>
 </div>
</div>

<div class="row" style="padding-bottom:30px;">
 <div class = "col-md-3 offset-md-9">
   <%= link_to "スレッド一覧を見る", admin_work_forums_path(@work.id) %>
 </div>
</div>

<div class="row" style="padding-bottom:30px;">
 <div class = "col-md-5">
   <h2>レビュー</h2>
 </div>
</div>

<div class="row" style="padding-bottom:30px;">
 <div class = "col-md-12">

   <div class="row" style="padding-top :10px;">
     <div class = "col-md-12">
       <table class="table">
         <tr>
           <th>投稿日</th>
           <th>評価</th>
           <th>投稿者</th>
           <th>レビュー</th>
           <th></th>
         </tr>

         <% @reviews.each do|review| %>
          <tr>
           <td width="160">
            <%= review.created_at.to_s(:datetime_jp) %>
           </td>

           <td width="100">
            <%= review.score %>
           </td>

           <td width="160">
            <%= Member.find(review.member_id).name %>
           </td>

           <td width="650">
            <b><%= review.title %></b>
            <br>
            <%= review.sentence %>
           </td>

           <td width="300">
            <%= link_to(admin_work_review_path(@work.id,review.id),method: :delete, data: {confirm: "本当に削除しますか？"} ) do %>
              <button type="button" class="btn btn-danger">削除</button>
            <% end %>
            </td>

          </tr>
         <% end %>

       </table>

     </div>
   </div>

 </div>
</div>

<div class="row" style="padding-bottom:30px;">
 <div class = "col-md-2 offset-md-10">
   <%= link_to "レビューをすべて見る", admin_work_reviews_path(@work.id) %>
 </div>
</div>