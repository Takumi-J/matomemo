<div class="row">
 <div class = "col-md-5">
   <div class="sub-ti">
    <h3><%= @member.name %>さんの会員詳細</h3>
   </div>
  </div>
</div>

<br>

<div class="row">
 <div class = "col-md-4 offset-md-1">
  <table class="normal-table">
    <tr>
     <th>会員ID</th>
     <td><%=@member.id%></td>
    </tr>
    
    <tr>
     <th>氏名</th>
     <td><%=@member.name%></td>
    </tr>
  
    <tr>
     <th>メールアドレス</th>
     <td><%=@member.email%></td>
    </tr>
  
    <th>会員ステータス</th>
     <td>
      <%if @member.is_deleted%>
       <div class="text-secondary">退会</div>
      <%else%>
       <div class="text-success">有効</div>
      <%end%>
     </td>
    </tr>
  </table>

 </div>
</div>

<br>

<div class="row">
 <div class = "col-md-2 offset-md-3">
  <%= link_to("/admin/members/#{@member.id}/edit") do %><button type="button" class="btn btn-success">編集する</button><%end%>
 </div>
</div>

