<div class="row">
  <div class="col-md-5">
    <div class="sub-ti">
      <h3>出演者一覧</h3>
    </div>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-3">

    <table>
      <%= search_form_for @q, url: actors_path do |f| %>
          <tr>
            <th>
              <%= f.label :name_cont, '出演者検索' %>
            </th>
          </tr>

          <tr>
            <td>
              <%= f.search_field :name_cont, :placeholder => "出演者名"%>
            </td>
          </tr>

          <tr>
            <td>
              <div class="text-right">
                <div class="actions">
                  <%= f.submit('検索',class: 'btn btn-secondary') %>
                </div>
              </div>
            </td>
          </tr>
        </div>
      <% end %>
    </table>
  </div> <!-- col end-->

<% if @results.blank? %>
<!--出演者全てを一覧表示-->
  <div class="col-md-9">
    <div class="row">
      <!--1列目-->
      <div class="col-md-5 offset-md-1">
        <table class="actor_genre_table">

          <tr>
            <th>出演者名</th>
            <th></th>
          </tr>

          <% @actors.each.with_index do|actor,index| %>
            <%if index % 2 == 0%>
              <tr>
                <td>
                  <%=actor.name%>
                </td>

                <td>
                  <%= link_to "出演作", actor_works_path(actor.id),class: 'btn btn-outline-success' %>
                </td>

              </tr>
            <%end%>
          <%end%>
        </table>
      </div>
      <!--2列目-->
      <div class="col-md-5 offset-md-1">
        <table class="actor_genre_table">
          <tr>
            <th>出演者名</th>
            <th></th>
          </tr>

          <% @actors.each.with_index do|actor, index| %>
            <%if index % 2 == 1%>
              <tr>
                <td>
                  <%= actor.name %>
                </td>

                <td>
                  <%= link_to "出演作", actor_works_path(actor.id),class: 'btn btn-outline-success' %>
                </td>
              </tr>
            <%end%>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div> <!--row end-->

<% else %>
<!--検索結果を一覧表示-->

  <div class="col-md-9">
    <div class="row">
      <!--1列目-->
      <div class="col-md-5 offset-md-1">
        <table class="actor_genre_table">

          <tr>
            <th>出演者名</th>
            <th></th>
          </tr>

          <% @results.each.with_index do|actor,index| %>
            <%if index % 2 == 0%>
              <tr>
                <td>
                  <%=actor.name%>
                </td>

                <td>
                  <%= link_to "出演作", actor_works_path(actor.id),class: 'btn btn-outline-success' %>
                </td>
              </tr>
            <%end%>
          <%end%>
        </table>
      </div>
      <!--2列目-->
      <div class="col-md-5 offset-md-1">
        <table class="actor_genre_table">
          <tr>
            <th>出演者名</th>
            <th></th>
          </tr>

          <% @results.each.with_index do|actor, index| %>
            <%if index % 2 == 1%>
              <tr>
                <td>
                  <%= actor.name %>
                </td>

                <td>
                  <%= link_to "出演作", actor_works_path(actor.id),class: 'btn btn-outline-success' %>
                </td>
              </tr>
            <%end%>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div> <!--row end-->

<% end %>

