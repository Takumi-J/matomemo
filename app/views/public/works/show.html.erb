<div class="row" style="padding-bottom: 30px;">
 <div class = "col-md-5">
  <div class="sub-ti">
   <h2>作品詳細</h2>
  </div>
 </div>
</div>

<div class="row" style="padding-bottom: 10px;">
   <div class = "col-md-5">
     <%= image_tag @work.image.to_s %>
     <p><%= @work.source %></p>
   </div>

   <div class = "col-md-6 offset-md-1">
      <div class="centers" style = "padding-bottom:10px;">
       <h2><%= @work.title %></h2>
       <p><%= @work.medium %></p>
        <%= form_with model: @work_mng,url:  {action: 'show'},local: true do |f| %>
          <%= f.select(:category,[["お気に入り"],["後で見る"],["断念"],["閲覧済み"]], { include_blank: '管理タグ',selected:@category})%>
          <%= f.hidden_field :work_id, :value => @work.id %>
          <%= f.hidden_field :member_id, :value => current_member.id %>
          <%= f.submit('登録',class: 'btn btn-secondary') %>
        <% end %>
      </div>

     <table class="vertical-table">


       <!--<tr>-->
       <!--  <th>評価</th>-->
       <!--  <td>点数を表示</td>-->
       <!--</tr>-->

       <tr>
         <th>公開日</th>
         <td><%= @work.release_date %></td>
       </tr>

       <tr>
         <th>ジャンル</th>
         <td>
           <% @genres.each do|genre| %>
            <%= Genre.find(genre.genre_id).name %>　<!--左に全角スペースあり-->
           <% end %>
         </td>
       </tr>

       <tr>
         <th>原作者</th>
         <td><%= @work.author %></td>
       </tr>

       <tr>
         <th>出演者</th>
         <td>
           <% @actors.each do|actor| %>
            <%= Actor.find(actor.actor_id).name %>　<!--左に全角スペースあり-->
           <% end %>
         </td>
       </tr>

     </table>
  </div>
</div>

<br>

<div class="row" style="padding-bottom: 10px;">
 <div class = "col-md-10 offset-md-1">
  <table class="vertical-table">
    <tr>
      <th>あらすじ</th>
      <td><%= @work.synopsis%></td>
    </tr>
  </table>
 </div>
</div>

<div class="row">
 <div class = "col-md-3 offset-md-9">
   <%= link_to "スレッド一覧を見る", work_forums_path(@work.id) %>
 </div>
</div>